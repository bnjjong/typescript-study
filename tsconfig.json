{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "es2018",
      "dom", // 브라우저에서 사용하는 라이브러리
      "es5"
    ],
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "pretty": true,
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": true,
    "noImplicitAny": false,
    "declaration": false,
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "outDir": "compiled",
    "watch": false,
    "listFiles": true,
  },
  "exclude": [
    "node_modules" // 컴파일 제외
  ],
  "include": [
    "src/**/*.ts" // 컴파일 대상
  ]
}